################################################################################################ mudar o ip aqui
# srv2-k8s-worker1 - rancher para conectar no cluster

#ssh -l vagrant -i private_key-vagrant 192.168.1.201

Vagrant.configure("2") do |config|
  config.vm.provider "hyperv" do |h|    
    ################################################################################################ mudar o ip aqui
    h.vmname = "srv2-k8s-worker1"
    h.cpus = 2
    h.maxmemory = 2048
    h.memory = 2048
  end

  #configurações padrão
  config.vm.box = "generic/ubuntu2004"
  config.vm.provider "hyperv"
  #configurações do hostname
  ################################################################################################ mudar o ip aqui
  config.vm.hostname = "srv2-k8s-worker1"
  #configurações de rede
  config.vm.network "public_network", bridge: "externo"
    
  config.vm.provision "shell", inline: <<-SHELL2
  cat << EOF > /etc/netplan/01-netcfg.yaml
network:
  version: 2
  ethernets:
    eth0:
      dhcp4: no
      ################################################################################################ mudar o ip aqui
      addresses: [192.168.1.201/24]
      gateway4: 192.168.1.254
      nameservers:
        addresses: [8.8.8.8,8.8.4.4]
EOF
  SHELL2

  config.vm.provision "shell", inline: <<-SHELL21
  
  #inserindo chave pública no server
  echo "ssh-rsa  vagrant" >> /home/vagrant/.ssh/authorized_keys

  SHELL21

  config.vm.provision "shell", inline: <<-SHELL3
    echo '--------------------------------------------------------------reiniciando tudo'
    shutdown -r now
  SHELL3

end